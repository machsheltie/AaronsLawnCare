# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy this file to .env.production for production builds

# Application Environment
VITE_APP_ENV=development

# Site URL (no trailing slash)
VITE_SITE_URL=https://aaronslawncare502.com

# Error Monitoring (Sentry)
# Get your DSN from https://sentry.io/
VITE_SENTRY_DSN=

# Analytics
# Get your tracking ID from your analytics provider
VITE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false

# Form Configuration
VITE_FORM_RATE_LIMIT=5
VITE_FORM_RATE_LIMIT_WINDOW=3600000

# API Configuration (if adding backend)
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# Debug Mode
VITE_DEBUG_MODE=false
